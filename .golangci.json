{
    "issues": {
        "exclude-rules": [
            {
                "path": "_test.go",
                "linters": [
                    "cyclop",
                    "dupl",
                    "funlen",
                    "varnamelen"
                ]
            }
        ],
        "exclude-use-default": false,
        "max-issues-per-linter": 0,
        "max-same-issues": 0
    },
    "linters": {
        "enable-all": true,
        "disable": [
            "gofumpt",
            "golint",
            "interfacer",
            "maligned",
            "scopelint"
        ]
    },
    "linters-settings": {
        "varnamelen": {
            "max-distance": 20
        }
    },
    "run": {
        "deadline": "5m",
        "skip-dirs": [
            "reports",
            "scripts"
        ],
        "tests": true
    }
}
